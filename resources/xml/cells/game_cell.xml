<brls:Box
    width="150"
    height="150"
    axis="column"
    alignItems="stretch"
    focusable="true"
    cornerRadius="12"
    highlightCornerRadius="15">

    <brls:Image
        id="image"
        width="auto"
        height="auto"
        grow="1"
        scalingType="fill"
        cornerRadius="12"
        backgroundColor="#00000030"/>

    <brls:Box
        detachedX="0"
        detachedY="0"
        width="auto"
        height="150"
        axis="column"
        justifyContent="flexEnd">

        <brls:Box
            width="auto"
            height="auto"
            minHeight="34"
            axis="column"
            justifyContent="center"
            backgroundColor="@theme/brls/backdrop"
            padding="8"
            cornerRadius="12">

            <brls:Label
                id="title"
                width="135"
                height="auto"
                singleLine="true"
                autoAnimate="false"
                textColor="@theme/brls/text"
                fontSize="15"/>

        </brls:Box>

    </brls:Box>

</brls:Box>